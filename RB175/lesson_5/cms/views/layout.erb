<!doctype html>
<html lang="en-US">
  <head>
    <title>CMS project</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/cms.css">
  </head>

  <body>
    <% if session[:error] %>
      <div class="flash-error">
        <p><%= session.delete(:error) %></p>
      </div>
    <% end %>

    <% if session[:success] %>
      <div class="flash-success">
        <p><%= session.delete(:success) %></p>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>